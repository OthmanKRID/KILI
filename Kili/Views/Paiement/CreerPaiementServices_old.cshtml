@model Kili.ViewModels.PaiementViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Paiement";
}
<
    <body>
        <section id="home" classedata-stellar-background-ratio="0.5">
          
          <div class="row">
               <div class="col-75">
                 <div class="container">

               @using (Html.BeginForm())  {
                          
                    <fieldset action="/action_page.php" >
                   
                       <div class="col-50">
                         <h3>Paiement</h3>
                         <label for="fname">Paiement par carte</label>
                         <div class="icon-container">
                           <i class="fa fa-cc-visa" style="color:navy;"></i>
                           <i class="fa fa-cc-amex" style="color:blue;"></i>
                           <i class="fa fa-cc-mastercard" style="color:red;"></i>
                           <i class="fa fa-cc-discover" style="color:orange;"></i>
               
                         </div>


                         
                         <label for="cname">Titulaire de la carte</label>
                         @Html.TextBoxFor(m => Model.MoyenPaiement.NomTitulaire , new { @type="text", @id="cname", @name="cardname", @placeholder="Nom", @readonly = "true", @required="required" })
                         <label for="ccnum">Numéro de carte</label>
                         @Html.TextBoxFor(m => Model.MoyenPaiement.Numero, new { @type="text", @id="ccnum", @name="cardnumber", @placeholder="xxxx-xxxx-xxxx-xxxx", @required="required" })
                         @Html.ValidationMessageFor(m => Model.MoyenPaiement.Numero)
                         <label for="expmonth">Date d'expiration</label>
                         @Html.TextBoxFor(m => Model.MoyenPaiement.DateExpiration, new { @type="text", @id="expmonth", @name="expmonth", @placeholder="mm/aa", @required="required" })
                        @Html.ValidationMessageFor(m => Model.MoyenPaiement.DateExpiration)
                         <div class="row">
                           <div class="col-50">
                           </div>
                           <div class="col-50">
                             <label for="cvv">CVV</label>
                          @Html.TextBoxFor(m => Model.MoyenPaiement.Cryptogramme, new { @type="text", @id="cvv", @name="cvv", @placeholder="xxx", @required="required" })
                          @Html.ValidationMessageFor(m => Model.MoyenPaiement.Cryptogramme)
                         </div>
                         </div>
                       </div>
                       <div class="col-50">
                       <label for="fname">Paiement par Paypal</label>
                         <div class="icon-container">
                           <i class="fa fa-cc-paypal" style="color:rgb(0, 60, 255);"></i>
                         </div>
                         <label for="cname">Paypal</label>
                         @Html.TextBoxFor(m => Model.MoyenPaiement.Identifiant, new { @type="text", @id="paypal", @name="paypal", @placeholder="Compte Paypal" })                       
                    </div>
                         @Html.HiddenFor(m=>Model.Action)
            @Html.HiddenFor(m=>Model.ActionID)
            @Html.HiddenFor(m=>Model.Paiement.Id)
            @Html.HiddenFor(m=>Model.Paiement.DatePaiement)
            @Html.HiddenFor(m=>Model.Paiement.AssociationId)
            @Html.HiddenFor(m=>Model.Paiement.MoyenPaiementId)
            </fieldset>
            }

                     </div>
                     <label>
                       <input type="checkbox" checked="checked" name="sameadr"> Adresse de livraison même que l'adresse de facturation
                     </label>
                    @* <input type="submit" value="Valider le Paiement" class="btn"/>*@
                     <button type="button" class="button">@Html.ActionLink("Valider le Paiement", "ConfirmerPaiementService", "Abonnement")</button>
              
              
               </div>
               </div>
             
               <div class="col-25">
                 <div>
                   <h4>Montant de la commande
                     <span class="price" style="color:black">
                       <i class="fa fa-shopping-cart"></i>
                     </span>
                   </h4>
                   <hr>
                   <p>Total <span class="price" style="color:black"><b>@Model.Paiement.Montant</b></span></p>
                 </div>
               </div>
             </div>
          </div>
     </section>


    </body>
