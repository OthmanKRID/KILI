@model Kili.Models.Vente.Panier;
@{
    Layout = "_Layout";
    ViewBag.Title = "Paiement";
}
@section css {
<link rel="stylesheet" href="~/css/paiement.css">
}
<section id="home" classedata-stellar-background-ratio="0.5">
    <div class="container">
        <h3>Paiement</h3>
        <div class="row">
            <div class="col-75">
                <form action="/action_page.php">

                    <div class="row">

                        <div class="col-50">
                            <label for="fname">Paiement par carte</label>
                            <div class="icon-container">
                                <i class="fa fa-cc-visa" style="color:navy;"></i>
                                <i class="fa fa-cc-amex" style="color:blue;"></i>
                                <i class="fa fa-cc-mastercard" style="color:red;"></i>
                                <i class="fa fa-cc-discover" style="color:orange;"></i>

                            </div>



                            <label for="cname">Titulaire de la carte</label>
                            <input type="text" id="cname" name="cardname" placeholder="Vincent Gaudel">
                            <label for="ccnum">Numéro de carte</label>
                            <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
                            <label for="expmonth">mois</label>
                            <input type="text" id="expmonth" name="expmonth" placeholder="September">

                            <div class="row">
                                <div class="col-50">
                                    <label for="expyear">Année</label>
                                    <input type="text" id="expyear" name="expyear" placeholder="2018">
                                </div>
                                <div class="col-50">
                                    <label for="cvv">CVV</label>
                                    <input type="text" id="cvv" name="cvv" placeholder="352">
                                </div>
                            </div>
                        </div>
                        <div class="col-50">
                            <label for="fname">Paiement par Paypal</label>
                            <div class="icon-container">
                                <i class="fa fa-cc-paypal" style="color:rgb(0, 60, 255);"></i>
                            </div>
                            <label for="cname">Paypal</label>
                            <input type="text" id="paypal" name="paypal" placeholder="Compte Paypal">
                        </div>

                    </div>
                    <label>
                        <input type="checkbox" checked="checked" name="sameadr"> Adresse de livraison même que l'adresse de facturation
                    </label>
                    <input type="submit" value="Valider le Paiement" class="btn">
                </form>
            </div>

            <div class="col-25">
                <div>
                    <h4>
                        Panier
                        <span class="price" style="color:black">
                            <i class="fa fa-shopping-cart"></i>
                            <b>@Model.Articles.Count</b>
                        </span>
                    </h4>
                    @foreach (var article in Model.Articles)
                   {
                       <p><a href="#">@article.Produit.Designation</a> <span class="price">@article.Produit.PrixUnitaire &euro;</span></p>
                   }
                    
                    <hr>
                    <p>Total <span class="price" style="color:black"><b>@(Model.Articles.Sum(article => article.Produit.PrixUnitaire * article.Quantite)) &euro;</b></span></p>
                </div>
            </div>
        </div>
    </div>
</section>

