@model Kili.Models.Vente.Panier

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Mon Panier</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Id</th>
            <th>Désignation</th>
            <th>Format</th>
            <th>Prix Unitaire</th>
            <th>Quantité</th>
            <th>Sous-Total</th>
            <th>Devise</th>
            <th>Option</th>
        </tr>

        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>@article.Produit.ProduitID</td>
                <td>@article.Produit.Designation</td>
                <td>@article.Produit.Format</td>
                <td>@article.Produit.PrixUnitaire</td>
                <td>@article.Quantite</td>
                <td>@(article.Produit.PrixUnitaire*article.Quantite)</td>
                <td>@article.Produit.Devise</td>
                <td>@Html.ActionLink("Supprimer", "Supprimer", "Panier", new{id = @article.ArticleId}) </td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Total</td>
            <td>
                @(Model.Articles.Sum(article => article.Produit.PrixUnitaire * article.Quantite)); 
            </td>
        </tr>
    </table>
    <br>
    <a asp-controller="Vente" asp-action="IndexCatalogue">Continuer l'achat</a>
</body>
</html>