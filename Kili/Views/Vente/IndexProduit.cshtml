@model List<Kili.Models.Vente.Produit>
@{
    Layout = null;
}
<h1> Vos produits </h1>
<table border ="1">
    <tr>
        <th>Id</th>
        <th>Désignation</th>
        <th>Format</th>
        <th>Description</th>
        <th>Images</th>
        <th>Prix Unitaire</th>
        <th>Devise</th>
        <th>Options</th>
    </tr>
    @foreach(var prod in Model)
    {
        <tr>
            <td>@prod.ProduitID</td>
            <td>@prod.Designation</td>
            <td>@prod.Format</td>
            <td>@prod.Description</td>
            <td><img src="@prod.ImagePath" height="20" width="20" /></td>

            <td>@prod.PrixUnitaire</td>
            <td>@prod.Devise</td>
            <td>
                    @Html.ActionLink("Modifier", "ModifierProduit", "Vente", new { @id = prod.ProduitID})
                    @Html.ActionLink("Supprimer", "SupprimerProduit", "Vente", new {@id = prod.ProduitID})
                </td>
        </tr>
    }
</table>

<ul>
    <li>@Html.ActionLink("Créer vos produits", "CreerProduit", "Vente")</li><br />
    <li>@Html.ActionLink("Revenir à l'accueil", "Index", "Home")</li>
</ul>