
@model Kili.Models.General.PanierService;
@{
    Layout = "_Layout";
    ViewBag.Title = "Panier";
}


<body>
    
    <!-- intro boutique -->
    <section id="section-kili" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>

        <div class="container">
            <div class="Liste-panier">
                <div class="col-xl-12 col-lg-12 col-md-10 col-sm-12 col-md-12">
                    <section class="card">
                        <H3 style="text-align:center;"> Panier</H3>
                        <!------------------------------------------- Ligne du premier article-->
                        <ul class="list-group-item align-items-center">
                            <li class="list-group-item align-items-center drag-handle">
                                <span class="drag-indicator"></span>
                                <div class="col-sm-10">
                                    <div class="col-md-2 col-md-10">IdService</div>
                                    <div class="col-md-2 col-md-10">Produit</div>
                                    <div class="col-md-2 col-md-10">Durée</div>
                                    <div class="col-md-2 col-md-10">Quantité</div>
                                    <div class="col-md-2 col-md-10">Prix</div>
                                    <div class="col-md-2 col-md-10">Sous-Total</div>
                                </div>
                                <button style="color:transparent;background-color:transparent;border:none;">ce bouton est pour la mise en page il ne sert a rien </button>

                            </li>
                        </ul>
						
                           @{
                                double total = 0;
                            }

                         @foreach (var item in Model.Items)
                         {
                        <!------------------------------------------- Ligne du deuxieme article-->
                        <ul class="list-group-item align-items-center drag-handle">
                            <li class="list-group-item align-items-center drag-handle ">
                                <span class="drag-indicator"></span>
                                <div class="col-sm-10">
                                    <div class="col-md-2 col-md-10">@item.Service.Id</div>
                                    <div class="col-md-2 col-md-10">@item.Service.TypeService</div>
                                    <div class="col-md-2 col-md-10">@item.Service.duree_mois</div>
                                    <div class="col-md-2 col-md-10">@item.Quantity</div>
                                    <div class="col-md-2 col-md-10">@item.Service.prix</div>
                                    <div class="col-md-2 col-md-10">@(item.Service.prix * item.Quantity)</div>

                                                                                @{
                                                total = total + (item.Service.prix * item.Quantity);
                                            }
                                </div>

                                <button type="button" class="btn btn-default">@Html.ActionLink("Supprimer", "SupprimerServiceDansPanier", "Abonnement", new { id = @item.Id })</button>

                                

                            </li>
                        </ul>
                         }

                      <!-------------------------------------------- ligne Total-------------->


                       

                        <!-------------------------------------------- ligne validation-------------->

                        <ul class="list-group-item align-items-center drag-handle">
                            <li class="list-group-item align-items-center drag-handle ">
                                <span class="drag-indicator"></span>
                    
                        
                        <button button type="button" class="btn btn-default">@Html.ActionLink("Annuler", "SupprimerPanier", "Abonnement")</button>
                        <button button type="button" class="button" id="btn-val">@Html.ActionLink("Continuer mes achats", "GererServices", "Association")</button>
                        <button button type="button" class="button" id="btn-val">@Html.ActionLink("Payer", "CreerPaiementServices", "Paiement", new {montant = @total})</button>

                            </li>
                        </ul>
                    </section>

                </div>
            </div>
        </div>
    </section>




</body>

