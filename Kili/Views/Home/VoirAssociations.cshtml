        </div> 
<div class="container">

           @foreach(var association in Model.Associations)
        {
                  <div class="responsive">
                    <div class="gallery">
                      <a href="@Url.Action("VoirDetailsAssociation", "Association", new { id = @association.Id})">
                        <img src=@association.UrlPhoto alt="Cinque Terre" width="300" height="100">
                      </a>
                      <div class="desc">@association.Nom</div>
                      <div class="desc">@association.Adresse.Ville</div>
                      <div class="desc">@association.Theme</div>
                      <div class="desc">@association.Description</div>
                    </div>
                  </div>
